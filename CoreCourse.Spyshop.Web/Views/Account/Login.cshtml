@model CoreCourse.Spyshop.Web.ViewModels.AccountLoginVm
@{
    ViewBag.Title = "Login - Spyshop";
}

@section  bottombody{
}

<div class="row">
    <div class="col-sm-6">
        <h1>Login</h1>

        <div asp-validation-summary="ModelOnly" class="errordiv"></div>
        
        <form asp-action="Login" class="form-horizontal">
            <div class="form-group">
                <label asp-for="Username" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" type="checkbox">
                            <label asp-for="RememberMe" style="padding:0;" />
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6"><br />
        <h4>Problems signing in?</h4>
        <p><span class="glyphicon glyphicon-edit"></span>&nbsp;<a asp-action="Register">
            Register</a> as a new customer.
        </p><p><span class="glyphicon glyphicon-share"></span>&nbsp;<a asp-action="Reset">
            Reset your password</a> in case you've forgotten it.
        </p>
    </div>
</div>