@{
    Layout = "~/Views/Shared/_PublicSpyLayout.cshtml";
}

@section head{
    <environment names="Production, Staging">
        <link rel="stylesheet" asp-append-version="true" href="~/bundles/spyshop-admin.min.css" />
    </environment>
    <environment names="Development">
        <link rel="stylesheet" asp-append-version="false" href="~/bundles/spyshop-admin.css" />
    </environment>
}

@section abovemain
{
    <div class="adminnav col-sm">
        <div class="navcontent">
            <div class="navtitle">Administration</div>
            <ul>
                @await Component.InvokeAsync("MainNavigation", new { showAdmin = true })
            </ul>
        </div>
    </div>
}

@RenderBody()
